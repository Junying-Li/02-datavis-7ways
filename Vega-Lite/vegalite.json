{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

  "width": 600,
  "height": 500,

  "data": {
    "url": "https://raw.githubusercontent.com/Junying-Li/02-datavis-7ways/main/cars-sample.csv"},

  "mark": "circle",

  "encoding": {
    "y": {"field": "MPG",
          "type": "quantitative", 
          "scale": {"zero": false}},

    "x": {"field": "Weight", 
          "type": "quantitative", 
          "scale": {"zero": false}},

    "color": {"field": "Manufacturer", 
              "type": "nominal", 
              "scale": {"range": ["#f3b6b7", "#b4b650", "#93d8bc", "#56B4E9", "#dfa9e0"]}},

    "size": {"field": "Weight", 
            "type": "quantitative"},

    "opacity": {"value": 0.5}
  }
}